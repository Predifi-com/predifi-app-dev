import "https://deno.land/x/xhr@0.1.0/mod.ts";
import { serve } from "https://deno.land/std@0.168.0/http/server.ts";

const corsHeaders = {
  'Access-Control-Allow-Origin': '*',
  'Access-Control-Allow-Headers': 'authorization, x-client-info, apikey, content-type',
};

interface ModelAnalysis {
  model: string;
  analysis: string;
  sentiment: 'bullish' | 'bearish' | 'neutral';
  confidence: 'high' | 'medium' | 'low';
  keyFactors: string[];
}

interface ConsolidatedResponse {
  consensus: {
    overallSentiment: 'bullish' | 'bearish' | 'neutral';
    confidence: 'high' | 'medium' | 'low';
    summary: string;
    keyFactors: string[];
  };
  models: Array<{
    name: string;
    analysis: string;
    sentiment: string;
    confidence: string;
  }>;
  metadata: {
    modelCount: number;
    timestamp: string;
  };
}

// Hugging Face Inference API (FREE - no API key required for public models)
async function getHuggingFaceAnalysis(prompt: string): Promise<ModelAnalysis | null> {
  try {
    const response = await fetch(
      "https://api-inference.huggingface.co/models/mistralai/Mistral-7B-Instruct-v0.2",
      {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          inputs: prompt,
          parameters: {
            max_new_tokens: 200,
            temperature: 0.7,
            return_full_text: false,
          },
        }),
      }
    );

    if (!response.ok) {
      console.error("Hugging Face API error:", response.status);
      return null;
    }

    const data = await response.json();
    
    // Handle different response formats
    let analysis = '';
    if (Array.isArray(data)) {
      analysis = data[0]?.generated_text || '';
    } else if (data.generated_text) {
      analysis = data.generated_text;
    } else if (data.error) {
      console.error("Hugging Face error:", data.error);
      return null;
    }
    
    return {
      model: "Mistral 7B",
      analysis: analysis.trim(),
    };
  } catch (error) {
    console.error("Error calling Hugging Face:", error);
    return null;
  }
}

// Groq API (FREE tier - 14,400 requests/day, only requires free API key)
async function getGroqAnalysis(prompt: string): Promise<ModelAnalysis | null> {
  const GROQ_API_KEY = Deno.env.get("GROQ_API_KEY");
  
  if (!GROQ_API_KEY) {
    console.log("GROQ_API_KEY not configured - skipping Groq (free at https://console.groq.com)");
    return null;
  }

  try {
    const response = await fetch("https://api.groq.com/openai/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${GROQ_API_KEY}`,
      },
      body: JSON.stringify({
        model: "llama-3.1-8b-instant",
        messages: [
          {
            role: "system",
            content: "You are a prediction market analyst. Provide concise, data-driven insights in 2-3 sentences.",
          },
          {
            role: "user",
            content: prompt,
          },
        ],
        temperature: 0.7,
        max_tokens: 200,
      }),
    });

    if (!response.ok) {
      console.error("Groq API error:", response.status);
      return null;
    }

    const data = await response.json();
    return {
      model: "Llama 3.1 8B (Groq)",
      analysis: data.choices[0].message.content.trim(),
    };
  } catch (error) {
    console.error("Error calling Groq:", error);
    return null;
  }
}

// Consolidate multiple analyses
function consolidateAnalyses(analyses: ModelAnalysis[]): string {
  if (analyses.length === 0) {
    return 'Analysis unavailable at this time.';
  }

  if (analyses.length === 1) {
    return `**${analyses[0].model}:**\n\n${analyses[0].analysis}`;
  }

  let consolidated = '# AI Market Analysis\n\n';
  consolidated += `*Consolidated insights from ${analyses.length} AI models*\n\n`;
  
  analyses.forEach((analysis, idx) => {
    consolidated += `## ${analysis.model}\n\n${analysis.analysis}\n\n`;
  });

  consolidated += '---\n\n';
  consolidated += '*Note: These are AI-generated analyses and should not be considered financial advice.*';

  return consolidated;
}

serve(async (req) => {
  if (req.method === 'OPTIONS') {
    return new Response(null, { headers: corsHeaders });
  }

  try {
    const { marketTitle, yesPercentage, noPercentage, volume } = await req.json();

    console.log('Analyzing market:', marketTitle);

    const prompt = `Analyze this prediction market and provide a concise outlook (2-3 sentences):

Market: ${marketTitle}
Current Odds: YES ${yesPercentage}% / NO ${noPercentage}%
Trading Volume: $${volume}

Focus on: market sentiment, probability assessment, and key factors that could influence the outcome.`;

    // Call free/open-source models in parallel
    // Hugging Face requires no API key! Groq offers generous free tier
    const analyses = await Promise.all([
      getHuggingFaceAnalysis(prompt),
      getGroqAnalysis(prompt),
    ]);

    // Filter out null results
    const validAnalyses = analyses.filter((a): a is ModelAnalysis => a !== null && a.analysis.length > 0);

    if (validAnalyses.length === 0) {
      // Fallback: provide a basic analysis
      return new Response(
        JSON.stringify({ 
          analysis: `**Basic Analysis:**\n\nThe market shows ${yesPercentage > 50 ? 'bullish' : 'bearish'} sentiment with YES at ${yesPercentage}%. Trading volume of $${volume} indicates ${parseFloat(volume) > 1000 ? 'active' : 'moderate'} participation. Consider market fundamentals and external factors before trading.`,
          models: ['Fallback'],
          modelCount: 0,
          timestamp: new Date().toISOString()
        }),
        { 
          headers: { ...corsHeaders, 'Content-Type': 'application/json' },
          status: 200 
        }
      );
    }

    const consolidatedAnalysis = consolidateAnalyses(validAnalyses);

    console.log(`Analysis generated successfully from ${validAnalyses.length} models`);

    return new Response(
      JSON.stringify({ 
        analysis: consolidatedAnalysis,
        models: validAnalyses.map((a: ModelAnalysis) => a.model),
        modelCount: validAnalyses.length,
        timestamp: new Date().toISOString()
      }),
      { 
        headers: { ...corsHeaders, 'Content-Type': 'application/json' },
        status: 200 
      }
    );

  } catch (error) {
    console.error('Error in market-analysis function:', error);
    return new Response(
      JSON.stringify({ error: error instanceof Error ? error.message : 'Unknown error' }),
      {
        status: 500,
        headers: { ...corsHeaders, 'Content-Type': 'application/json' },
      }
    );
  }
});